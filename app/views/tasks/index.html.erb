<h1>Tasks</h1>
<style>
  table, th, td {
    padding: 5px;
    border: 1px solid black;
  }
</style>
<table>
  <thead>
    <tr>
      <th>Tarea</th>
      <th>Descripción</th>
      <th>Fecha de finalización</th>
      <th>Estado</th>
      <th>Nivel de importancia</th>
      <th>Etiqueta</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.level %></td>
        <td>
        <% unless task.tags.blank? %>
          <% task.tags.each do |tag| %>
            <%= link_to tag.name, user_tasks_tag_path(tag_id: tag.id) %>
          <% end %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

