<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.level %></td>
        <% unless task.tags.blank? %>
          <% task.tags.each do |tag| %>
            <td><%= link_to tag.name, user_tasks_tag_path(tag_id: tag.id) %><td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

